# =========================================
# Configuração do Banco de Dados
# =========================================
# Substitua 'postgres' e 'senha' pelos valores reais do seu ambiente
DATABASE_URL="postgresql://postgres:123@localhost:5432/estoque_construcao"

# =========================================
# Configuração de Autenticação JWT
# =========================================
# Chave secreta usada para assinar tokens JWT
JWT_SECRET="chave_super_secreta_em_producao"
# Tempo de expiração do token (ex: 1d = 1 dia, 2h = 2 horas)
JWT_EXPIRATION="1d"

# =========================================
# Configuração da Aplicação NestJS
# =========================================
# Porta onde o servidor vai rodar
PORT=3000
# Ambiente atual (development, test, production)
NODE_ENV=development

# =========================================
# Configuração de Logs
# =========================================
# Nível de log (error, warn, info, debug)
LOG_LEVEL=info